---
const { article } = Astro.props;
import Tags from "./Tags.astro";
import Image from "astro/components/Image.astro";
---

<div
  class="mt-6 py-4 rounded-xl border-2 border-white/40 text-white border-1 relative overflow-hidden group flex flex-col justify-between gap-4 w-[90%] sm:w-full text-pretty p-6 bg-transparent"
>
  <div class="p-6">
    <div
      class="flex item-center justify-between flex-col sm:flex-row pb-4 sm:pb-0"
    >
      <h2 class="text-lg sm:text-2xl font-semibold mb-2 flex items-end border-b-2 border-purple-400 >
        <a
          href={`/blog/${article.slug}`}
          class="group-hover:text-purple-500 cursor-pointer transition-all duration-100"
        >
          {article.data.title}
        </a>
      </h2>
      <Image
        src={article.data.image}
        width={200}
        height={200}
        alt={article.data.title}
        class="rounded-lg"
      />
    </div>
    <p class="text-gray-300 text-sm mb-4 px-2">
      {new Date(article.data.pubDate).toLocaleDateString()}
    </p>
    <Tags tags={article.data.tags} />
    <p class="mt-4 text-white/80 mb-4">{article.data.desc}</p>
    <a
      href={`/blog/${article.slug}`}
      class="text-purple-500 cursor-pointer mt-12 border-b-2 border-purple-500 pb-2"
    >
      Read More
    </a>
  </div>
</div>
