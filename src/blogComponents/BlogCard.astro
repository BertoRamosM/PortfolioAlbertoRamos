---
const { article } = Astro.props;
---

<div
  class="mt-6 py-4 rounded-xl border-2 border-purple-400/20 text-white border-1 relative overflow-hidden group flex flex-col justify-between gap-4 w-[90%] sm:w-full text-pretty"
>
  </a>
  <div class="p-6">
    <h2 class="text-lg sm:text-2xl font-semibold mb-2">
      <a
        href={`/${article.slug}`}
        class="group-hover:text-purple-500 cursor-pointer transition-all duration-100"
      >
        {article.data.title}
      </a>
    </h2>
    <p class="text-gray-200 text-sm mb-4 border-l-2 px-2">
      {new Date(article.data.pubDate).toLocaleDateString()}
    </p>
    <div class="flex gap-4 flex-wrap">
      {
        article.data.tags.map((tag) => (
          <span class="px-2 py-1 bg-transparent border-2 border-white text-white rounded-full text-xs hover:opacity-90 hover:text-purple-300 cursor-pointer  transition-all duration-100 hover:border-purple-500">
            <a href={`/articles/tag` + tag}>#{tag}</a>
          </span>
        ))
      }
    </div>
  </div>
</div>
