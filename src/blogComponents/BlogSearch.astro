---
import SearchIcon from "../icons/Search.astro";


---

<form class="relative mt-4" id="search-form" onSubmit={(event) => event.preventDefault()}>
  <label class="hidden" for="search-input"></label>
  <div class="relative">
    <input
      type="text"
      id="query"
      name="query"
      class="py-2 pl-10 w-[90%] sm:w-full pr-4 rounded-xl border-2 border-purple-400/20 bg-transparent text-white focus:outline-none"
      placeholder="Search by title or subject"
    />
    <button 
    type="submit"
    class="absolute inset-y-0 left-3 flex items-center">
      <SearchIcon class="w-4 h-4 text-white hover:text-purple-600 hover:scale-105 transition-transform duration-100 ease-in-out" />
    </button>
  </div>
</form>
