---
import { ViewTransitions } from "astro:transitions";

import "@fontsource-variable/onest";

const { title, description } = Astro.props;
import Header from "../components/Header.jsx";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description: string;
}

const { currentLocale } = Astro;
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />

    
     <style>
    /* Ensure no flickering by setting default theme styles */
    html.light, html.dark {
      transition: none !important;
    }
  </style>
  <script>
    (function() {
      const theme = localStorage.getItem('theme');
      if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.add('light');
      }
    })();
  </script>
    <title>{title}</title>
  </head>

  <body class="relative h-full w-full bg-zinc-300 dark:bg-slate-950 text-slate-950 dark:text-white">
    <div class="fixed inset-x-0 top-0 isolate z-[10] h-[50px]">
      <div class="gradient-mask-b-0 absolute inset-0 backdrop-blur-[1px]">
      </div><div class="gradient-mask-b-0 absolute inset-0 backdrop-blur-[2px]">
      </div><div class="gradient-mask-b-0 absolute inset-0 backdrop-blur-[3px]">
      </div><div class="gradient-mask-b-0 absolute inset-0 backdrop-blur-[6px]">
      </div><div
        class="gradient-mask-b-0 absolute inset-0 backdrop-blur-[12px]"
      >
      </div>
    </div>

    <Header client:load/>
    <slot />
    <Footer />
    <div class="fixed inset-x-0 bottom-0 isolate z-[10] h-[100px]">
      <div class="gradient-mask-t-0 absolute inset-0 backdrop-blur-[1px]">
      </div><div class="gradient-mask-t-0 absolute inset-0 backdrop-blur-[2px]">
      </div><div class="gradient-mask-t-0 absolute inset-0 backdrop-blur-[3px]">
      </div><div class="gradient-mask-t-0 absolute inset-0 backdrop-blur-[6px]">
      </div><div
        class="gradient-mask-t-0 absolute inset-0 backdrop-blur-[12px]"
      >
      </div>
    </div>

    <style is:global>
      :root {
      }
      html.light, html.dark {
  transition: none !important;
}

      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        color: white;
          transition: background-color 0.5s, color 0.5s;

      }
      .back {
        background: linear-gradient(
          109.6deg,
          rgba(0, 0, 0, 0.93) 11.2%,
          rgb(63, 61, 61) 78.9%
        );
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }
    </style>
  </body>
</html>
