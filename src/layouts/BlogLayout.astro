---
interface Props {
  title: string;
}

import { ViewTransitions } from "astro:transitions";

import "@fontsource-variable/onest";
import BlogHeader from "../blogComponents/BlogHeader.astro";
import BlogFooter from "../blogComponents/BlogFooter.astro";

const { title, description } = Astro.props;

interface Props {
  title: string;
  description: string;
}

const { currentLocale } = Astro;
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />

    <title>{title}</title>
  </head>

  <body class="relative h-full w-full bg-slate-950">
    <div class="fixed inset-x-0 top-0 isolate z-[10] h-[50px]">
      <div class="gradient-mask-b-0 absolute inset-0 backdrop-blur-[1px]">
      </div><div class="gradient-mask-b-0 absolute inset-0 backdrop-blur-[2px]">
      </div><div class="gradient-mask-b-0 absolute inset-0 backdrop-blur-[3px]">
      </div><div class="gradient-mask-b-0 absolute inset-0 backdrop-blur-[6px]">
      </div><div
        class="gradient-mask-b-0 absolute inset-0 backdrop-blur-[12px]"
      >
      </div>
    </div>
    <BlogHeader />
    <slot />
    <BlogFooter />
    <div class="fixed inset-x-0 bottom-0 isolate z-[10] h-[100px]">
      <div class="gradient-mask-t-0 absolute inset-0 backdrop-blur-[1px]">
      </div><div class="gradient-mask-t-0 absolute inset-0 backdrop-blur-[2px]">
      </div><div class="gradient-mask-t-0 absolute inset-0 backdrop-blur-[3px]">
      </div><div class="gradient-mask-t-0 absolute inset-0 backdrop-blur-[6px]">
      </div><div
        class="gradient-mask-t-0 absolute inset-0 backdrop-blur-[12px]"
      >
      </div>
    </div>

    <style is:global>
      :root {
      }

      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        color: white;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }
    </style>
  </body>
</html>
