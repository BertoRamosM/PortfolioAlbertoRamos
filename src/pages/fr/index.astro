---
import Layout from "../../layouts/Layout.astro";
import Badge from "../../components/Badge.astro";
import SocialContainer from "../../components/SocialContainer.astro";
import Experience from "../../components/Experience.astro";
import StudiesIcon from "../../icons/StudiesIcon.astro";
import CodeIcon from "../../icons/CodeIcon.astro";
import Projects from "../../components/Projects.astro";
import TechIcon from "../../icons/TechIcon.astro";
import Technology from "../../components/Technology.astro";
import Recomendations from "../../components/Recomendations.astro";

import Languages from "../../components/Languages.astro";
import UserIcon from "../../icons/UserIcon.astro";
import About from "../../components/About.astro";
import Contact from "../../components/Contact.astro";
import ContactIcon from "../../icons/ContactIcon.astro";
import LanguageIcon from "../../icons/LanguageIcon.astro";
import RecommendationIcon from "../../icons/RecommendationIcon.astro";
---

<Layout
  title="Alberto Ramos Portfolio | Développeur web"
  description=`Engagez Alberto Ramos: un développeur web dynamique animé par une passion pour l'apprentissage et un esprit collaboratif. Développeur web capable de créer des applications web visuellement saisissantes et hautement fonctionnelles.`
>
  <main class="relative
  px-4">
    <section id="top" class="w-full mx-auto lg:w-[740px] py-32 flex flex-col">
      <img
        class="object-cover rounded-full size-40 mb-10 my-8 self-center"
        src="../../images/cvpic3.webp"
        alt="picture of Alberto Ramos"
        loading="eager"
      />

      <h1
        class="text-white text-5xl font-bold flex gap-x-1 md:gap-x-4 pb-6 lg:pb-10"
      >
        <span class="w-max-content">Alberto Ramos</span>
        <span
          class="text-purple-400 text-xl sm:text-2xl self-end justify-self-end"
          >Front End Developer</span
        >
      </h1>

      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span>Grand passionné de technologie, de développement front-end et le
          hardware.</span
        >
        <span class="text-yellow-100">De Barcelone, Espagne.</span>
      </h2>

      <SocialContainer class="flex gap-x-2 flex-wrap" />
    </section>

    <!--Education -->
    <section id="education" class="w-full mx-auto lg:w-[740px]">
      <h2 class="text-3xl font-semibold mb-16 flex gap-x-3 items-center">
        <StudiesIcon />Éducation
      </h2>
      <Experience />
    </section>

    <!--Projects -->
    <section id="projects" class="w-full mx-auto lg:w-[740px]">
      <h2 class="text-3xl font-semibold mt-40 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />Projets
      </h2>
      <Projects />
    </section>

    <!--About me -->
    <section id="about" class="w-full mx-auto lg:w-[740px] pb-10">
      <h2 class="text-2xl font-semibold mt-20 flex gap-x-3 items-center pb-5">
        <UserIcon class="size-10" />Sur moi
      </h2>
      <About />

      <!--Technologies -->
      <section
        class="w-full mx-auto lg:w-[740px] shadow-lg shadow-slate-800 pb-10"
      >
        <h2 class="text-2xl font-semibold mt-20 flex gap-x-3 items-center pb-5">
          <TechIcon class="size-9" />Technologies
        </h2>
        <Technology />
      </section>

      <!--Languages -->
      <section
        class="w-full mx-auto lg:w-[740px] shadow-lg shadow-slate-800 pb-5"
      >
        <h2 class="text-2xl font-semibold mt-20 flex gap-x-3 items-center pb-5">
          <LanguageIcon class="size-9" />Langues
        </h2>
        <Languages />
      </section>

      <section id="contact" class="w-full mx-auto lg:w-[740px] pt-10">
        <h2 class="text-2xl font-semibold mt-20 flex gap-x-3 items-center">
          <RecommendationIcon class="size-9" />Recommendations
        </h2>
        <Recomendations />
      </section>

      <section id="contact" class="w-full mx-auto lg:w-[740px] pt-10">
        <h2 class="text-2xl font-semibold mt-20 flex gap-x-3 items-center">
          <ContactIcon class="size-9" />Contactez moi
        </h2>
        <Contact />
      </section>
    </section>
  </main>
</Layout>
