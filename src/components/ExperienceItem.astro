---
interface Props {
  date: string;
  title: string;
  location: string;
  link: string;
  description: string;
}
const { date, title, location, link, description } = Astro.props;

import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<span
  class="absolute flex items-center justify-center w-4 h-4 bg-purple-300 rounded-full -start-2 mt-2"
>
</span>
<h3 class="flex items-center mb-1 text-lg font-semibold dark:text-white pl-6">
  {title}
</h3>
<time
  class="block mb-2 text-sm font-normal leading-none text-purple-300 dark:text-gray-500"
  >{location}</time
>
<time
  class="block mb-2 text-sm font-normal leading-none text-yellow-100 dark:text-gray-300"
  >{date}</time
>
<p
  class="mb-4 text-base font-normal text-white-500 dark:text-gray-100 text-pretty"
>
  {description}
</p>
<a
  href={link}
  target="_blank"
  class="rounded-full border border-white/10 gap-x-3 py-2 px-3 bg-white/10 text-white-200 hover:scale-105 hover:bg-white/10 transition flex item-center w-max hover:text-purple-300"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="icon icon-tabler icon-tabler-book-2"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    fill="none"
    stroke-linecap="round"
    stroke-linejoin="round"
    ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
      d="M19 4v16h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12z"></path><path
      d="M19 16h-12a2 2 0 0 0 -2 2"></path><path d="M9 8h6"></path></svg
  >
  {t("course")}</a
>
